class Solution {
    public String[] findWords(String[] words) {
        Set<Character> r1 = toSet("qwertyuiop");
        Set<Character> r2 = toSet("asdfghjkl");
        Set<Character> r3 = toSet("zxcvbnm");
        List<String> result = new ArrayList<>();
        for(String w : words)
        {
            Set<Character> chars = new HashSet<>();
            for(char c : w.toLowerCase().toCharArray()) chars.add(c);
            if(r1.containsAll(chars)||r2.containsAll(chars)||r3.containsAll(chars))
            {
                result.add(w);
            }
        }
        return result.toArray(new String[0]);
    }
    private Set<Character> toSet(String s)
    {
        Set<Character> set = new HashSet<>();
        for(char c : s.toCharArray()) set.add(c);
        return set;
    }
}
