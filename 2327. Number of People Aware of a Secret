class Solution {
    public int peopleAwareOfSecret(int n, int delay, int forget) {
        int MOD = 1_000_000_007;
        long[] dp = new long[n];
        dp[0] = 1;
        long active = 0;
        for(int i = 1;i < n ;i++)
        {
            if(i - delay >= 0)
            {
                active = (active+dp[i-delay])%MOD;
            }
            if(i - forget >= 0)
            {
                active = (active-dp[i-forget])%MOD;
            }
            if(active < 0) active += MOD;
            dp[i] = active;
        }
        long ans = 0;
        int start = Math.max(0,n - forget);
        for(int i = start;i < n;i++)
        {
            ans = (ans+dp[i])%MOD;
        }
        return (int) ans;
    }
}
