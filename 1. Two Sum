class Solution {
    public int[] twoSum(int[] nums, int target) {
        List<Integer> result = new ArrayList<>();
        int n = nums.length;
        for (int i = 0; i < n; i++) 
        {
            for (int j = i + 1; j < n; j++) 
            { 
                int sum = nums[i] + nums[j];
                if (sum == target) {
                    result.add(i);
                    result.add(j);
                    break;
                }
            }
            if (!result.isEmpty()) { 
                break;
            }
        }

        int[] intArray = new int[result.size()];
        for (int i = 0; i < result.size(); i++) {
            intArray[i] = result.get(i);
        }

        return intArray;
    }
}
