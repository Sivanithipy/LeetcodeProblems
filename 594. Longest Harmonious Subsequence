class Solution {
    public int findLHS(int[] nums) {
        Map<Integer,Integer> result = new HashMap<>();
        for(int n:nums)
        {
            result.put(n,result.getOrDefault(n,0)+1);
        }
        int longest = 0;
        for(int key : result.keySet())
        {
            if(result.containsKey(key+1))
            {
                longest = Math.max(longest,result.get(key)+result.get(key+1));
            }
        }
        return longest;
    }
}
